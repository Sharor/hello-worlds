<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => { class: "form-horizontal", role: "form"}) do |a| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= a.label :name %>
    </div>
    <div class="col-sm-8">
      <%= a.text_field :name, class: "form-control", placeholder: "Write category name", auto_focus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= a.submit class: 'btn btn-primary btn-lg' %>
      <%= link_to "Cancel", articles_path, class: "btn btn-primary btn-lg btn-danger" %>
    </div>
  </div>
<% end %>