<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-8">
    <%= form_for(@user, :html => { class: "form-horizontal", role: "form"}) do |a| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :username %>
        </div>
        <div class="col-sm-10">
          <%= a.text_field :username, class: "form-control", placeholder: "Write username", auto_focus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :email %>
        </div>
        <div class="col-sm-10">
          <%= a.email_field :email, class: "form-control", placeholder: "Write email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :password %>
        </div>
        <div class="col-sm-10">
          <%= a.password_field :password, class: "form-control", placeholder: "Write password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%= a.submit(@user.new_record? ? "Sign up" : "Update account information", class: 'btn btn-primary btn-lg') %>
          <%= link_to "Cancel", articles_path, class: "btn btn-primary btn-lg btn-danger" %>
        </div>
      </div>
    <% end %>

  </div>
</div>