<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-xs-8">
    <%= form_for(@article, :html => { class: "form-horizontal", role: "form"}) do |a| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :title %>
        </div>
        <div class="col-sm-10">
          <%= a.text_field :title, class: "form-control", placeholder: "Write title", auto_focus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :description %>
        </div>
        <div class="col-sm-10">
          <%= a.text_area :description, rows: 10, class: "form-control", placeholder: "Write description" %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-8">
            <%= a.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%= a.submit class: 'btn btn-primary btn-lg' %>
          <%= link_to "Cancel", articles_path, class: "btn btn-primary btn-lg btn-danger" %>
        </div>
      </div>
    <% end %>

  </div>
</div>